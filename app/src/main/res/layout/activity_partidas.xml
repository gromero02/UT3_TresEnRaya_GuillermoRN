<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#828A5F"
    android:orientation="vertical"
    tools:context=".Partidas">

    <TextView
        android:id="@+id/tituloPartidas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tituloPartidas"
        android:textColor="#DDB9B9"
        android:textSize="48sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cabeceraPartidas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/cabecerapartidas"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lvPartidas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:textAlignment="center" />
</LinearLayout>